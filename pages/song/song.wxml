<l-message/>
<swiper indicator-dots="{{false}}" autoplay="{{false}}" class="page-swiper">
    <swiper-item class="page-swiper-item-first page-swiper-item">
        <image src="{{songDetail.al.picUrl}}" class="img-bgc"></image>

        <!-- 旋转专辑封面 -->
        <view class="cover-view-img" bind:tap="switchShowLyrics" wx:if="{{!showLyrics}}">
            <image src="{{songDetail.al.picUrl}}"
                   class="{{currentlyPlayingStatus === 1 ? 'img_animation' : 'img'}}"></image>
        </view>
        <!-- 歌手 & 歌名-->
        <view class="detail-text" wx:if="{{!showLyrics}}">
            <text class="detail-text-song-name">{{songDetail.name}}</text>
            <text class="detail-text-singer">{{songDetail.ar[0].name}}</text>
        </view>
        <!-- 进度条 -->
        <view class="progress-view" wx:if="{{!showLyrics}}">
            <slider class="progress" bindchange="changeCurrentTimePercent" bindchanging="changingCurrentTimePercent"
                    block-size="{{12}}" activeColor="#b0a2a9"
                    step="{{1}}" backgroundColor="#97878f" value="{{currentTimePercent}}" min="0" max="100"/>
        </view>
        <!-- 控制按钮 -->
        <view wx:if="{{!showLyrics}}" class="controls">

            <image class="controls-other"
                   style="width: 50rpx;height: 50rpx"
                   src="data:image/png;base64,">
            </image>

            <image
                    class="controls-other"
                    style="width: 50rpx;height: 50rpx"
                    src="data:image/png;base64,">
            </image>

            <image
                    src="{{currentlyPlayingControl}}"
                    style="width: 100rpx;height: 100rpx"
                    bind:tap="play_or_pause"></image>

            <image
                    class="controls-other"
                    src="data:image/png;base64,"
                    style="width: 50rpx;height: 50rpx"
                    bind:tap=""></image>

            <image
                    class="controls-other"
                    src="data:image/png;base64,"
                    style="width: 50rpx;height: 50rpx"
                    bind:tap="play_or_pause"></image>
        </view>
        <!-- 歌词 -->
        <view wx:if="{{showLyrics}}" class="lyrics" bind:tap="switchShowLyrics">
            <text class="currentLyric">{{currentLyric}}</text>
        </view>
    </swiper-item>

    <swiper-item class="page-swiper-item-second page-swiper-item">
        <block wx:for="{{songComment}}" wx:key="commentId" wx:for-item="comment">
            <l-card type="avatar" l-class="comment-swiper-item-card" image="{{comment.user.avatarUrl}}"
                    title="{{comment.user.nickname}}">
                <!-- 此处为content -->
                <view class="comment-swiper-item-card-content">
                    {{comment.content}}
                </view>
            </l-card>
        </block>
    </swiper-item>

</swiper>
